            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
        </Grid.RowDefinitions>



        <Label Grid.Column="0" Margin="19,18,19,12" Grid.Row="1" >通讯类型</Label>

        <ComboBox Name="combox_CommunicationType" Grid.Column="1" Margin="0,144,10,12" Grid.RowSpan="2"/>

